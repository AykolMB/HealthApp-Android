<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grafik"
    tools:context=".ReportScreen">

    <ListView
        android:id="@+id/listview"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp">

    </ListView>

    <Button
        android:id="@+id/butPulse"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="10dp"
        android:text="Pulse" />

    <Button
        android:id="@+id/butStep"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/butPulse"
        android:text="Step" />

    <Button
        android:id="@+id/butBodyTemp"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/butStep"
        android:text="B.Temp" />

    <Button
        android:id="@+id/butGraph"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/listview"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="Graph"
        android:visibility="invisible" />

    <Button
        android:id="@+id/butUpdate"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/listview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="245dp"
        android:text="Update"
        android:visibility="invisible" />

    <Button
        android:id="@+id/butHumidity"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="550dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/butBodyTemp"
        android:text="Hum" />

</RelativeLayout>